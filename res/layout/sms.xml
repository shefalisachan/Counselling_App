<?xml version="1.1" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:orientation="vertical" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  
<ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	
	<LinearLayout android:orientation="vertical"
   android:layout_width="fill_parent"
		android:layout_height="fill_parent">	
	
  
  
  <LinearLayout android:orientation="horizontal" android:background="#8A9DB7"
		android:layout_width="fill_parent" android:layout_height="50dip">


			
		<TextView android:id="@+id/headname" android:text="message us" android:textColor="#ffffff"
			android:textSize="22dip" android:textStyle="bold" android:layout_marginTop="8dip"
			android:layout_marginLeft="60dp"
			android:layout_height="wrap_content" android:layout_width="162dip" android:gravity="center"/>
		
		
			
</LinearLayout>
  
			<EditText android:text=""
    android:id="@+id/phonenumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip"/>
			

	
	<TextView android:text="Message :"
	
      android:textSize="18dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginTop="10dip"/>
	

   
   <EditText android:layout_width="fill_parent"
    android:layout_height="150dip"
    android:id="@+id/message"
	android:lines="5"
    android:layout_marginLeft="5dip" 
    android:layout_marginRight="5dip" 
    android:textColor="#03163D" 
    android:textSize="18dip"
    android:gravity="top"
	android:imeOptions="actionDone"
	android:inputType="textMultiLine|textCapSentences"/>


	<CheckBox
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:text="@+string/send_binarysms"
	    	android:checked="false"
	    	 android:visibility="gone"
	    	android:id="@+id/binary">
	    </CheckBox>
	
	
	
	
	<Button 
	android:layout_height="42dip" 
android:textSize="16dip" 
android:textColor="#304d87" 
android:layout_width="90dip" 
	android:layout_gravity="center" 
	android:layout_marginTop="10dip"
	android:textStyle="bold" 
	android:id="@+id/send" 
	android:text="Send">
		</Button>
		
	
	
  </LinearLayout>
</ScrollView>
</LinearLayout>
